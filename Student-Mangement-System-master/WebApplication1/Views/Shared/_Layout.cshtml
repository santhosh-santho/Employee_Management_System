<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
       <div>
            <div class="navbar d-flex justify-content-between align-items-center bg-info text-white p-3">
               
                <div class="logo">
                    <h4>Employee Management System</h4>
                </div>

                <div class="menu">
                    <ul class="d-flex list-unstyled mb-0">
                        <li class="mx-2 "><a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">Home</a></li>
                        <li class="mx-2"><a asp-controller="Menu" asp-action="About" class="text-white text-decoration-none">About</a></li>
                        <li class="mx-2"><a asp-controller="Employee" asp-action="List" class="text-white text-decoration-none">Manage Employee</a></li>
                        <li class="mx-2"><a asp-controller="Menu" asp-action="Privacy" class="text-white text-decoration-none">Privacy</a></li>
                    
                    </ul>
                </div>
            </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white text-center">
        <div class="container ">
            2025-Employee Management System | Built by Santhosh Kumar using ASP.NET Core & Bootstrap
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
