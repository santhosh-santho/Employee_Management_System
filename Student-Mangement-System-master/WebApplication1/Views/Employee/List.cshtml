@{
}
@model List<WebApplication1.Models.Employee>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Employee</h1>
    <a asp-controller="Employee" asp-action="Add" class="btn btn-success">
        <span class="me-1">+</span> Add Employee
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>

                <td>
                    <a class=" btn btn-primary" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
